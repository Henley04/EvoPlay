<Window
    x:Class="EvoPlay.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EvoPlay"
    Title="EvoPlay">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  文件选择和歌曲名  -->
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            Spacing="10">
            <Button Click="SelectMusic_Click" Content="选择音乐" />
            <TextBlock x:Name="SongNameText" VerticalAlignment="Center" />
        </StackPanel>

        <!--  播放控制和进度条  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,10"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                x:Name="PlayPauseButton"
                Click="PlayPause_Click"
                Content="暂停" />
            <Slider
                x:Name="ProgressSlider"
                Width="200"
                ValueChanged="ProgressSlider_ValueChanged" />
            <TextBlock x:Name="CurrentTimeText" VerticalAlignment="Center" />
        </StackPanel>

        <!--  歌词显示  -->
        <TextBlock
            x:Name="LyricsText"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <!--  隐藏的MediaPlayerElement用于播放音乐  -->
        <MediaPlayerElement
            x:Name="Player"
            AreTransportControlsEnabled="False"
            AutoPlay="False"
            Visibility="Collapsed" />
    </Grid>
</Window>
